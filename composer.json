{
	"require": {
		"laravel/framework": "4.2.*",
		"erusev/parsedown": "~1.0",
		"ikimea/browser": "~1.0",
		"laracasts/presenter": "~0.1",
		"guzzlehttp/guzzle": "~4.0",
		"zizaco/entrust": "1.2.*",
		"forxer/Gravatar": "~1.2",

		"league/flysystem": "~0.4",
		"knplabs/github-api": "~1.2",
		"wardrobe/core": "1.*"
	},

	"require-dev": {
		"raveren/kint": "dev-master",
		"fzaninotto/faker": "*",
		"barryvdh/laravel-debugbar": "~1.0"
	},

	"autoload": {
		"classmap": [
			"Anodyne/database/migrations",
			"Anodyne/database/seeds"
		],

		"psr-4": {
			"Anodyne\\": "Anodyne\\Web\\",
			"Anodyne\\Extensions\\": "Anodyne\\Extensions\\",
			"Anodyne\\Foundation\\": "Anodyne\\Foundation\\",
			"Anodyne\\Users\\": "Anodyne\\Users\\"
		}
	},
	
	"config": {
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"minimum-stability": "dev",
	"prefer-stable": true
}