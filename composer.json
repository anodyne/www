{
	"require": {
		"laravel/framework": "4.2.*",
		"erusev/parsedown": "1.1.*",
		"ikimea/browser": "1.*",
		"laracasts/presenter": "0.1.*",
		"guzzlehttp/guzzle": "4.*",
		"zizaco/entrust": "1.3.*",
		"forxer/Gravatar": "1.2.*",

		"league/flysystem": "0.5.*",
		"knplabs/github-api": "1.3.*",
		"wardrobe/core": "1.*"
	},

	"require-dev": {
		"raveren/kint": "dev-master",
		"fzaninotto/faker": "*",
		"barryvdh/laravel-debugbar": "~1.0"
	},

	"autoload": {
		"classmap": [
			"Anodyne/database/migrations",
			"Anodyne/database/seeds"
		],

		"psr-4": {
			"Anodyne\\": "Anodyne\\Site\\",
			"Anodyne\\Users\\": "Anodyne\\Users\\"
		}
	},
	
	"config": {
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"minimum-stability": "dev",
	"prefer-stable": true
}